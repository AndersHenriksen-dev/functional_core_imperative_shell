{
    // Ignore hydra output folder
    "search.exclude": {
        "**/Outputs": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },

    // Try to set Bash as default for Linux/Mac
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.defaultProfile.osx": "bash",

    // For Windows, it's trickier. "Git Bash" is the standard name.
    "terminal.integrated.defaultProfile.windows": "Git Bash",

    // Optional: If you want to be safe, define what "bash" actually is
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        }
    },

    "workbench.iconTheme": "vscode-icons",
    "explorer.copyRelativePathSeparator": "/",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "always",
        "source.organizeImports.ruff": "always"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "black-formatter.args": [
        "--line-length=120"
    ],
    "isort.args": ["--profile", "black"],
    "flake8.args": ["--max-line-length=120"],
    "editor.inlineSuggest.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",

    "terminal.integrated.scrollback": 5000,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "python.analysis.autoImportCompletions": true,
    "files.autoSave": "onFocusChange",
    "parquet-viewer.format": "csv",

    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true,
        "**/__pycache__/**": true,
        "**/.venv/**": true,
    },
    "files.exclude": {
		"**/.vscode": false,
		"**/.git": false,
        "**/*.pyc": true,
        "**/*egg-info": true,
        "**/*pytest_cache": true,
        "**/__pycache__": true,
    },

}